<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yq.accountsoft.activity.SystemSet">
    <TextView
        android:id="@+id/info_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="新增用户"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
    <TextView android:layout_width="90dp"
        android:id="@+id/tvaccount_sys"
        android:textSize="20sp"
        android:text="账 户："
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtaccount_sys"
        android:layout_alignBottom="@+id/txtaccount_sys"
        android:layout_alignParentLeft="true"
        >
    </TextView>
    <EditText
        android:id="@+id/txtaccount_sys"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvaccount_sys"
        android:inputType="textPersonName"
        android:numeric="integer"
        android:maxLength="9"
        android:hint="admin"
        android:layout_below="@+id/info_sys"
        />
    <TextView android:layout_width="90dp"
        android:id="@+id/tvpassword_sys"
        android:textSize="20sp"
        android:text="密 码："
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtpassword_sys"
        android:layout_alignBottom="@+id/txtpassword_sys"
        android:layout_alignParentLeft="true"
        >
    </TextView>
    <EditText
        android:id="@+id/txtpassword_sys"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvpassword_sys"
        android:inputType="textPassword"
        android:numeric="integer"
        android:maxLength="9"
        android:hint="abc1234"
        android:layout_below="@+id/tvaccount_sys"
        />
    <Button
        android:id="@+id/confirm_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="确认"
        />
    <Button
        android:id="@+id/cancel_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/confirm_sys"
        android:text="取消"
        />
</RelativeLayout>
